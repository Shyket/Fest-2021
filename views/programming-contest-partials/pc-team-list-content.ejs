<div class="right_col" role="main">
  <!-- top tiles -->
  <div class="col-md-12 col-sm-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Programming Contest<small>/Teams' List</small></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li>
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br />
        <% let success3= 'Team Selected'%>
        <% let success= 'Delete Successful'%>
        <% let success2='Payment successfull'%>
        <% let success4='Team Data Updated Succesfully'%>
        <% if (error.length>0) {if
        (error==success||success2||success3){%>
        <div class="alert alert-success"><%=error%></div>
        <%}else{%>
        <div class="alert alert-danger"><%=error%></div>
        <%}%> <%}%>
        <div class="row">
          <div class="col-sm-12">
            <div class="card-box table-responsive">
              <table
                id="datatable-responsive"
                class="table table-striped table-bordered nowrap"
                cellspacing="0"
                width="100%"
              >
                <thead>
                  <tr>
                    <th>Team <br/>Name</th>
                    <th>Institute</th>
                    <th>Coach <br />Information</th>
                    <th>Team Leader <br />Information</th>
                    <th>Team Member1 <br />Information</th>
                    <th>Team Member2 <br />Information</th>
                    <th>Due</th>
                    <th>Paid</th>
                    <th>Selected</th>
                    <th>Payment <br />Status</th>
                    <th>Select</th>
                    <th>Payment<br />Done</th>
                    <th>Edit</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <%if(teamList.length>0){
                  teamList.forEach(team=>{%>
                  <tr>
                    <td><%=team.teamName%></td>
                    <td><%=team.institute%></td>
                    <td>
                      <h7 style="color: blue">Name:&nbsp;</h7> <%=team.coachName%><br />
                      <h7 style="color: blue">Contact:&nbsp;</h7> <%=team.coachContact%><br />
                      <h7 style="color: blue">Email:&nbsp;</h7> <%=team.coachEmail%> <br />
                      <h7 style="color: blue">Tshrit Size:&nbsp;</h7> <%=team.coachTshirt%><br />
                    </td>
                    <td>
                      <h7 style="color: blue">Name:&nbsp;</h7><%=team.leaderName%><br />
                      <h7 style="color: blue">Contact:&nbsp;</h7> <%=team.leaderContact%> <br />
                      <h7 style="color: blue">Email:&nbsp;</h7> <%=team.leaderEmail%> <br />
                      <h7 style="color: blue">Tshrit Size:&nbsp;</h7> <%=team.leaderTshirt%> <br />
                    </td>
                    <td>
                      <h7 style="color: blue">Name:&nbsp;</h7> <%=team.member1Name%><br />
                      <h7 style="color: blue">Contact:&nbsp;</h7> <%=team.member1Contact%> <br />
                      <h7 style="color: blue">Email:&nbsp;</h7> <%=team.member1Email%> <br />
                      <h7 style="color: blue">Tshrit Size:&nbsp;</h7> <%=team.member1Tshirt%> <br />
                    </td>
                    <td>
                      <h7 style="color: blue">Name:&nbsp;</h7> <%=team.member2Name%><br />
                      <h7 style="color: blue">Contact:&nbsp;</h7> <%=team.member2Contact%> <br />
                      <h7 style="color: blue">Email:&nbsp;</h7> <%=team.member2Email%> <br />
                      <h7 style="color: blue">Tshrit Size:&nbsp;</h7> <%=team.member2Tshirt%> <br />
                    </td>
                    <td><%=team.due%></td>
                    <td><%=team.paid%></td>
                    <td>
                      <%if(team.selected==true){%>
                      <p style="color: green">Yes</p>
                      <%}else{%>
                      <p style="color: red">No</p>
                      <%}%>
                    </td>
                    <td>
                      <%if(team.due==0){%>
                      <p style="color: green">Done</p>
                      <%}else{%>
                      <p style="color: red">Incomplete</p>
                      <%}%>
                    </td>
                    <td>
                      <% const selectURL= '/pc/select/'+ team._id %>
                      <a href="<%= selectURL %>"
                        ><i class="fa fa-check"></i
                        ><span class="fa fa-chevron"></span
                      ></a>
                    </td>
                    <td>
                      <% const paymentDoneURL= '/pc/payment/'+ team._id
                      %>
                      <a href="<%= paymentDoneURL %>"
                        ><i class="fa fa-money"></i
                        ><span class="fa fa-chevron"></span
                      ></a>
                    </td>
                    <td>
                      <% const editURL= '/pc/edit/'+team._id %>
                      <a href="<%= editURL%>" 
                        ><i class="fa fa-pencil"></i
                        ><span class="fa fa-chevron"></span
                      ></a>
                    </td>
                    
                    <td>
                      <% const deleteURL= '/pc/delete/'+ team._id %>
                      <a href="<%= deleteURL%>"
                        ><i class="fa fa-trash"></i
                        ><span class="fa fa-chevron"></span
                      ></a>
                    </td>
                  </tr>
                  <% }) }%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>