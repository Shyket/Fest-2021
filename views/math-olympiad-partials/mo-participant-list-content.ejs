<!DOCTYPE html>
<html lang="en">
  <body>
    <div class="right_col" role="main">
      <div class="">
        <div class="page-title">
          <div class="title_left">
            <h3><small>Math Olympiad 2021</small></h3>
          </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
          <div class="col-md-12 col-sm-12">
            <div class="x_panel">
              <div class="x_title">
                <h2>Participant List</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                  <li>
                    <a class="collapse-link"
                      ><i class="fa fa-chevron-up"></i
                    ></a>
                  </li>
                  
                </ul>
                <div class="clearfix"></div>
              </div>
              <div class="x_content">
                <br/>
                <%if(error.length>0){%>
                  <%if(error=="Data deleted successfully"){ %>
                    <div class="alert alert-success"><%=error%></div>
                    <%}else{%>
                <div class="alert alert-danger"><%=error%></div>
                <%}}%>
                <div class="row">
                  <div class="col-sm-12">
                    <div class="card-box table-responsive">
                      
                      <table
                        id="datatable-responsive"
                        class="
                          table table-striped table-bordered
                          dt-responsive
                          nowrap
                        "
                        cellspacing="0"
                        width="100%"
                      >
                        <thead>
                          <tr>
                            <th>Name</th>
                            <th>Contact</th>
                            <th>Email</th>
                            <th>Category</th>
                            <th>Institute</th>
                            <th>Selected</th>
                            <th>Payment <br/>status</th>
                            <th>Paid</th>
                            <th>Due</th>
                            <th>T-Shirt</th>            
                            <th>Select</th>            
                            <th>Payment <br/>Done</th>            
                            <th>Edit</th>           
                            <th>Delete</th>           
                          </tr>
                        </thead>
                        <tbody>
                          <% if(participantList.length > 0){%>
                            <%participantList.forEach((participant) => {%>
                              <tr>
                            <td><%= participant.name %></td>
                            <td><%= participant.contact %></td>
                            <td><%= participant.email %></td>
                            <td><%= participant.category %></td>
                            <td><%= participant.institute %></td>
                            <td><%= participant.selected %></td>
                            <td><% if(participant.payment_status){ %>
                              <p style="color: Green">Done</p>
                              <% }else{ %>
                              <p style="color: Red">Unpaid</p>
                              <%}%>
                            </td>
                            <td><%= participant.paid %></td>
                            <td><%= participant.due %></td>
                            <td><%= participant.t_shirt %></td>
                            <td></td>
                            <td><% const paymentURL="/mo/payment/"+participant._id %>
                              <a href="<%=paymentURL%>"> 
                                <i class="fa fa-money"></i>
                                <span class="fa fa-chevron"></span>
                              </a>
                            </td>
                            <td>participant.tshirt</td>
                            <td>
                              <% const deleteURL="/mo/delete/"+participant._id %>
                              <a href="<%=deleteURL%>"> 
                                <i class="fa fa-trash"></i>
                                <span class="fa fa-chevron"></span>
                              </a>
                            </td>
                          </tr> 
                        <% })} %>
                                                 
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
